page {
  background-color: #f5f6f7;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
/* 顶部数据卡片 */
.dashboard-card {
  background: linear-gradient(135deg, #007aff, #00c6ff);
  color: #fff;
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-around;
}
.dashboard-card .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dashboard-card .stat-item .num {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.dashboard-card .stat-item .num.highlight {
  font-size: 44rpx;
  color: #fff;
}
.dashboard-card .stat-item .num.price {
  font-size: 44rpx;
}
.dashboard-card .stat-item .label {
  font-size: 24rpx;
  opacity: 0.9;
}
/* 吸顶头部 */
.sticky-header {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 99;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
/* 标签栏 */
.tabs {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.tabs .tab-item {
  position: relative;
  font-size: 28rpx;
  color: #999;
  padding-bottom: 10rpx;
}
.tabs .tab-item.active {
  color: #007aff;
  font-weight: bold;
  border-bottom: 4rpx solid #007aff;
}
.tabs .tab-item .badge {
  position: absolute;
  top: -10rpx;
  right: -20rpx;
  background-color: #dd524d;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 20rpx;
}
/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 15rpx 30rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #666;
}
.filter-bar .filter-item {
  margin-right: 40rpx;
  display: flex;
  align-items: center;
}
.filter-bar .filter-item .iconfont {
  font-size: 20rpx;
  margin-left: 6rpx;
}
/* 订单列表 */
.order-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}
.order-list .order-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}
.order-list .order-card .card-header {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.order-list .order-card .card-header .order-no {
  color: #999;
}
.order-list .order-card .card-header .status-text {
  font-weight: bold;
}
.order-list .order-card .card-header .status-text.text-orange {
  color: #f0ad4e;
}
.order-list .order-card .card-header .status-text.text-blue {
  color: #007aff;
}
.order-list .order-card .card-header .status-text.text-green {
  color: #4cd964;
}
.order-list .order-card .card-header .status-text.text-gray {
  color: #ccc;
}
.order-list .order-card .goods-box {
  display: flex;
  margin-bottom: 20rpx;
}
.order-list .order-card .goods-box .goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background-color: #eee;
  margin-right: 20rpx;
}
.order-list .order-card .goods-box .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-list .order-card .goods-box .goods-info .goods-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.order-list .order-card .goods-box .goods-info .goods-spec {
  font-size: 24rpx;
  color: #999;
  background-color: #f8f8f8;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  align-self: flex-start;
}
.order-list .order-card .goods-box .goods-info .goods-price-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.order-list .order-card .goods-box .goods-info .goods-price-row .price {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.order-list .order-card .goods-box .goods-info .goods-price-row .qty {
  font-size: 26rpx;
  color: #999;
}
.order-list .order-card .summary-box {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.order-list .order-card .summary-box .row {
  margin-bottom: 8rpx;
  display: flex;
}
.order-list .order-card .summary-box .row .label {
  width: 80rpx;
  color: #999;
}
.order-list .order-card .summary-box .row .value {
  flex: 1;
}
.order-list .order-card .summary-box .row .value.tag {
  background: #e1f3ff;
  color: #007aff;
  padding: 0 8rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  flex: none;
}
.order-list .order-card .summary-box .row .value.red {
  color: #dd524d;
}
.order-list .order-card .summary-box .total-row {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx dashed #eee;
}
.order-list .order-card .summary-box .total-row .total-price {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-left: 20rpx;
}
.order-list .order-card .action-box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.order-list .order-card .action-box .location-tip {
  font-size: 24rpx;
  color: #007aff;
  margin-right: auto;
}
.order-list .order-card .action-box .btn {
  margin: 0 0 0 20rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}
.order-list .order-card .action-box .btn::after {
  border: none;
}
.order-list .order-card .action-box .btn.btn-primary {
  background-color: #007aff;
  color: #fff;
}
.order-list .order-card .action-box .btn.btn-outline-danger {
  background-color: #fff;
  color: #dd524d;
  border: 1rpx solid #dd524d;
  line-height: 58rpx;
}
.order-list .order-card .action-box .btn.btn-default {
  background-color: #f8f8f8;
  color: #666;
  border: 1rpx solid #ddd;
  line-height: 58rpx;
}
.empty-state {
  text-align: center;
  color: #999;
  padding-top: 100rpx;
  font-size: 28rpx;
}
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}

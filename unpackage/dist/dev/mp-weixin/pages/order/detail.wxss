/* 页面背景 */
page {
  background-color: #f5f6f7;
}
.container {
  padding-bottom: 40rpx;
}
/* 1. 顶部状态栏 */
.status-header {
  background-color: #007aff;
  color: #fff;
  padding: 40rpx 30rpx 60rpx;
  /* 底部留多点给卡片重叠 */
}
.status-header .status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.status-header .status-desc {
  font-size: 24rpx;
  opacity: 0.8;
}
/* 通用卡片样式 */
.section {
  background-color: #fff;
  width: 690rpx;
  margin: 0 auto;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}
/* 2. 地址卡片 (向上浮动覆盖头部) */
.address-box {
  margin-top: -30rpx;
  display: flex;
  align-items: flex-start;
}
.address-box .type-tag {
  background-color: #007aff;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}
.address-box .info {
  flex: 1;
}
.address-box .info .user-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.address-box .info .user-row .name {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.address-box .info .user-row .phone {
  font-size: 26rpx;
  color: #666;
}
.address-box .info .user-row .copy-btn {
  margin-left: auto;
  color: #007aff;
  font-size: 24rpx;
  border: 1rpx solid #007aff;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}
.address-box .info .address-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}
/* 3. 商品卡片 */
.goods-box .goods-item {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.goods-box .goods-item .goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background-color: #eee;
  margin-right: 20rpx;
}
.goods-box .goods-item .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-box .goods-item .goods-info .name {
  font-size: 28rpx;
  color: #333;
}
.goods-box .goods-item .goods-info .spec {
  font-size: 24rpx;
  color: #999;
}
.goods-box .goods-item .goods-info .price-row {
  display: flex;
  justify-content: space-between;
  font-weight: bold;
}
.goods-box .goods-item .goods-info .price-row .qty {
  font-weight: normal;
  color: #999;
  font-size: 24rpx;
}
/* 4. 信息列表 */
.info-box .note-text {
  color: #dd524d !important;
}
/* 通用行样式 */
.cell-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}
.cell-row:last-child {
  margin-bottom: 0;
}
.cell-row .label {
  color: #999;
}
.cell-row .value {
  color: #333;
  flex: 1;
  text-align: right;
}
.cell-row .price-red {
  color: #dd524d;
  font-size: 32rpx;
  font-weight: bold;
}
.cell-row .copy-link {
  color: #007aff;
  margin-left: 10rpx;
}
/* 5. 底部固定栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}
.footer-bar .btn {
  margin: 0;
  margin-left: 20rpx;
  font-size: 28rpx;
  border-radius: 34rpx;
  padding: 0 40rpx;
  height: 68rpx;
  line-height: 68rpx;
}
.footer-bar .btn::after {
  border: none;
}
.footer-bar .btn.btn-gray {
  background-color: #f5f5f5;
  color: #666;
}
.footer-bar .btn.btn-default {
  background-color: #fff;
  border: 1rpx solid #ddd;
  color: #333;
  line-height: 66rpx;
}
.footer-bar .btn.btn-primary {
  background-color: #007aff;
  color: #fff;
}
